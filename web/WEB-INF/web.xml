    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>rechnungPdf</servlet-name>
        <servlet-class>com.daa.util.PdfServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rechnungPdf</servlet-name>
        <url-pattern>/pdfdokumente/PizzaRechnung.pdf</url-pattern>
    </servlet-mapping>
